{
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--privileged"
  ],
  "forwardPorts": [
    2375,
    2376
  ],
  "mounts": [
    "type=bind,source=/lib/modules,target=/lib/modules,readonly",
    "type=bind,source=/opt/containerd,target=/opt/containerd,readonly"
  ],
  "extensions": [
    "formulahendry.dotnet-test-explorer",
    "ms-azuretools.vscode-docker",
    "ms-dotnettools.csharp"
  ],
  "settings": {
    "omnisharp.path": "latest" // https://github.com/OmniSharp/omnisharp-vscode/issues/5410#issuecomment-1284531542.
  },
  "postCreateCommand": "git config --system --add safe.directory ${containerWorkspaceFolder} && nohup /bin/sh -c 'dockerd &'",
  "postStartCommand": "dotnet build"
}
